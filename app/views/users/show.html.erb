<div class="row">
  <div class="span12">
    <div class="media-body pull-left">
      <h2 class="media-heading"><%= @user.name %></h2>
    <div class="media">
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url, class: 'pull-left' %>
      <% end %>
      </div>
    </div>
  </div>
</div>

<br/>

<div class="row">
  <div class="tabbable tabs-center">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#posts" data-toggle="tab">Posts (<%= @user.posts.count %>)</a></li>
      <li><a href="#comments" data-toggle="tab">Comments (<%= @user.comments.count %>)</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="posts">
        <%= render @posts %>
      </div>
      <div class="tab-pane" id="comments">
        <%= render @user.comments %>
      </div>
    </div>
  </div>
</div>